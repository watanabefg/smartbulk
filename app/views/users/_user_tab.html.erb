<div class="tabs">
    <input id="all" type="radio" name="tab_item" checked>
    <label class="tab_item" for="all">1W</label>
    <input id="month" type="radio" name="tab_item">
    <label class="tab_item" for="month">1M</label>
    <input id="threemonth" type="radio" name="tab_item">
    <label class="tab_item" for="threemonth">3M</label>
    <input id="sixmonth" type="radio" name="tab_item">
    <label class="tab_item" for="sixmonth">6M</label>
    
    <!--1Week-->
    <div class="tab_content" id="week_content">
      <div class="chartWrapper">
      <div class="chart">
        <canvas id="week-chart" width="100%"></canvas>
      </div>
      </div>
    </div>
    <!--1Month-->
    <div class="tab_content" id="month_content">
      <div class="chartWrapper">
      <div class="chart">
        <canvas id="month-chart" style="width: 100%; height:100%;"></canvas>
      </div>
      </div>
    </div>
    <!--3Month-->
    <div class="tab_content" id="threemonth_content">
      <div class="chartWrapper">
      <div class="chart">
        <canvas id="month3-chart" style="width: 100%; height:100%;"></canvas>
      </div>
      </div>
    </div>
    <!--6month-->
    <div class="tab_content" id="sixmonth_content">
      <div class="chartWrapper">
      <div class="chart">
        <canvas id="month6-chart" width="100%"></canvas>
      </div>
      </div>
    </div>
</div>
<%= render 'users/chart' %>