<% if user_signed_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>Debug用</h1>
  <aside class="col-md-4">
    <%= form_for(@record) do |f| %>
      <div class="form-group">
        <%= f.label :weight, 'weight' %>
        <%= f.text_field :weight, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :fatPer, 'body fat percentage' %>
        <%= f.text_field :fatPer, class: 'form-control' %>
      </div>      
      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
  </aside>  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Smartbulk</h1>
      <%= link_to 'Sign up now!', new_user_registration_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>